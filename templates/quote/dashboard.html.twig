{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des devis - Administration{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">Gestion des devis</li>
{% endblock %}

{% block body %}
    <h1 class="mb-4">Gestion des devis</h1>
    
    <div class="admin-card">
        <div class="admin-card-header">
            <h5 class="mb-0">Liste des devis</h5>
        </div>
        <div class="admin-card-body">
            <ul class="nav nav-tabs mb-4" id="quotesTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="true">
                        <i data-lucide="clock"></i> En attente <span class="badge bg-warning text-dark ms-1">{{ pendingQuotes|length }}</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="in-progress-tab" data-bs-toggle="tab" data-bs-target="#in-progress" type="button" role="tab" aria-controls="in-progress" aria-selected="false">
                        <i data-lucide="rotate-cw"></i> En cours <span class="badge bg-info ms-1">{{ inProgressQuotes|length }}</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button" role="tab" aria-controls="completed" aria-selected="false">
                        <i data-lucide="check-circle"></i> Complétés <span class="badge bg-success ms-1">{{ completedQuotes|length }}</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button" role="tab" aria-controls="rejected" aria-selected="false">
                        <i data-lucide="x-circle"></i> Rejetés <span class="badge bg-danger ms-1">{{ rejectedQuotes|length }}</span>
                    </button>
                </li>
            </ul>
            
            <div class="tab-content" id="quotesTabsContent">
                <!-- Devis en attente -->
                <div class="tab-pane fade show active" id="pending" role="tabpanel" aria-labelledby="pending-tab">
                    {% if pendingQuotes is empty %}
                        <div class="alert alert-info">
                            <i data-lucide="info"></i> Aucun devis en attente.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Client</th>
                                        <th>Date</th>
                                        <th>Produits</th>
                                        <th>Paiement</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for quote in pendingQuotes %}
                                        <tr>
                                            <td>#{{ quote.id }}</td>
                                            <td>
                                                {% if quote.user %}
                                                    {{ quote.user.email }}
                                                    {% if quote.user.quotes|length <= 1 %}
                                                        <span class="badge bg-info ms-1" data-bs-toggle="tooltip" title="Premier devis">1er</span>
                                                    {% endif %}
                                                {% else %}
                                                    {{ quote.email }}
                                                    <span class="badge bg-info ms-1" data-bs-toggle="tooltip" title="Premier devis">1er</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ quote.createdAt|date('d/m/Y H:i') }}</td>
                                            <td>
                                                {{ quote.items|length }} produit(s)
                                                {% if quote.isPaymentRequired %}
                                                    <span class="badge bg-warning text-dark" data-bs-toggle="tooltip" 
                                                          title="Ce devis contient des produits payants">
                                                        {{ quote.user and quote.user.quotes|length <= 1 ? (quote.items|length - freeItemsLimit) : quote.items|length }} payant(s)
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if quote.isPaymentRequired %}
                                                    {% if quote.isPaid %}
                                                        <span class="badge bg-success">Payé</span>
                                                    {% else %}
                                                        <span class="badge bg-danger">Paiement requis</span>
                                                    {% endif %}
                                                {% else %}
                                                    <span class="badge bg-secondary">Non requis</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_quote_view', {'id': quote.id}) }}" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Voir le détail">
                                                        <i data-lucide="eye"></i>
                                                    </a>
                                                    {% if quote.isPaymentRequired and not quote.isPaid %}
                                                        <a href="{{ path('app_quote_mark_as_paid', {'id': quote.id}) }}" class="btn btn-sm btn-outline-success" data-bs-toggle="tooltip" title="Confirmer paiement">
                                                            <i data-lucide="credit-card"></i>
                                                        </a>
                                                        <button class="btn btn-sm btn-outline-info" disabled data-bs-toggle="tooltip" title="Paiement requis pour traiter">
                                                            <i data-lucide="play"></i>
                                                        </button>
                                                    {% else %}
                                                        <a href="{{ path('app_quote_process', {'id': quote.id}) }}" class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip" title="Traiter">
                                                            <i data-lucide="play"></i>
                                                        </a>
                                                    {% endif %}
                                                    <a href="{{ path('app_quote_status', {'id': quote.id, 'status': 'rejected'}) }}" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Rejeter" onclick="return confirm('Êtes-vous sûr de vouloir rejeter ce devis ?');">
                                                        <i data-lucide="x"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
                
                <!-- Devis en cours -->
                <div class="tab-pane fade" id="in-progress" role="tabpanel" aria-labelledby="in-progress-tab">
                    {% if inProgressQuotes is empty %}
                        <div class="alert alert-info">
                            <i data-lucide="info"></i> Aucun devis en cours de traitement.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Client</th>
                                        <th>Date</th>
                                        <th>Produits</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for quote in inProgressQuotes %}
                                        <tr>
                                            <td>#{{ quote.id }}</td>
                                            <td>
                                                {% if quote.user %}
                                                    {{ quote.user.email }}
                                                    {% if quote.user.quotes|length <= 1 %}
                                                        <span class="badge bg-info ms-1" data-bs-toggle="tooltip" title="Premier devis">1er</span>
                                                    {% endif %}
                                                {% else %}
                                                    {{ quote.email }}
                                                    <span class="badge bg-info ms-1" data-bs-toggle="tooltip" title="Premier devis">1er</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ quote.createdAt|date('d/m/Y H:i') }}</td>
                                            <td>
                                                {{ quote.items|length }} produit(s)
                                                {% if quote.isPaymentRequired %}
                                                    <span class="badge bg-warning text-dark" data-bs-toggle="tooltip" 
                                                          title="Ce devis contient des produits payants">
                                                        {{ quote.user and quote.user.quotes|length <= 1 ? (quote.items|length - 3) : quote.items|length }} payant(s)
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_quote_view', {'id': quote.id}) }}" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Voir le détail">
                                                        <i data-lucide="eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_quote_status', {'id': quote.id, 'status': 'completed'}) }}" class="btn btn-sm btn-outline-success" data-bs-toggle="tooltip" title="Marquer comme complété">
                                                        <i data-lucide="check"></i>
                                                    </a>
                                                    <a href="{{ path('app_quote_status', {'id': quote.id, 'status': 'rejected'}) }}" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Rejeter" onclick="return confirm('Êtes-vous sûr de vouloir rejeter ce devis ?');">
                                                        <i data-lucide="x"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
                
                <!-- Devis complétés -->
                <div class="tab-pane fade" id="completed" role="tabpanel" aria-labelledby="completed-tab">
                    {% if completedQuotes is empty %}
                        <div class="alert alert-info">
                            <i data-lucide="info"></i> Aucun devis complété.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Client</th>
                                        <th>Date</th>
                                        <th>Produits</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for quote in completedQuotes %}
                                        <tr>
                                            <td>#{{ quote.id }}</td>
                                            <td>
                                                {% if quote.user %}
                                                    {{ quote.user.email }}
                                                    {% if quote.user.quotes|length <= 1 %}
                                                        <span class="badge bg-info ms-1" data-bs-toggle="tooltip" title="Premier devis">1er</span>
                                                    {% endif %}
                                                {% else %}
                                                    {{ quote.email }}
                                                    <span class="badge bg-info ms-1" data-bs-toggle="tooltip" title="Premier devis">1er</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ quote.createdAt|date('d/m/Y H:i') }}</td>
                                            <td>
                                                {{ quote.items|length }} produit(s)
                                                {% if quote.isPaymentRequired %}
                                                    <span class="badge bg-warning text-dark" data-bs-toggle="tooltip" 
                                                          title="Ce devis contient des produits payants">
                                                        {{ quote.user and quote.user.quotes|length <= 1 ? (quote.items|length - 3) : quote.items|length }} payant(s)
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('app_quote_view', {'id': quote.id}) }}" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Voir le détail">
                                                    <i data-lucide="eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
                
                <!-- Devis rejetés -->
                <div class="tab-pane fade" id="rejected" role="tabpanel" aria-labelledby="rejected-tab">
                    {% if rejectedQuotes is empty %}
                        <div class="alert alert-info">
                            <i data-lucide="info"></i> Aucun devis rejeté.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Client</th>
                                        <th>Date</th>
                                        <th>Produits</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for quote in rejectedQuotes %}
                                        <tr>
                                            <td>#{{ quote.id }}</td>
                                            <td>
                                                {% if quote.user %}
                                                    {{ quote.user.email }}
                                                    {% if quote.user.quotes|length <= 1 %}
                                                        <span class="badge bg-info ms-1" data-bs-toggle="tooltip" title="Premier devis">1er</span>
                                                    {% endif %}
                                                {% else %}
                                                    {{ quote.email }}
                                                    <span class="badge bg-info ms-1" data-bs-toggle="tooltip" title="Premier devis">1er</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ quote.createdAt|date('d/m/Y H:i') }}</td>
                                            <td>
                                                {{ quote.items|length }} produit(s)
                                                {% if quote.isPaymentRequired %}
                                                    <span class="badge bg-warning text-dark" data-bs-toggle="tooltip" 
                                                          title="Ce devis contient des produits payants">
                                                        {{ quote.user and quote.user.quotes|length <= 1 ? (quote.items|length - 3) : quote.items|length }} payant(s)
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('app_quote_view', {'id': quote.id}) }}" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Voir le détail">
                                                    <i data-lucide="eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %} 