{% extends 'base.html.twig' %}

{% block title %}Tableau de bord des devis{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Tableau de bord des devis</h1>
    
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
    
    <ul class="nav nav-tabs mb-4" id="quotesTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="true">
                En attente <span class="badge bg-warning ms-2">{{ pendingQuotes|length }}</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="processed-tab" data-bs-toggle="tab" data-bs-target="#processed" type="button" role="tab" aria-controls="processed" aria-selected="false">
                Traités <span class="badge bg-success ms-2">{{ processedQuotes|length }}</span>
            </button>
        </li>
    </ul>
    
    <div class="tab-content" id="quotesTabsContent">
        <div class="tab-pane fade show active" id="pending" role="tabpanel" aria-labelledby="pending-tab">
            {% if pendingQuotes is empty %}
                <div class="alert alert-info">
                    Aucun devis en attente.
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>N° de devis</th>
                                <th>Date</th>
                                <th>Client</th>
                                <th>Produit</th>
                                <th>Quantité</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for quote in pendingQuotes %}
                                <tr>
                                    <td>{{ quote.quoteNumber }}</td>
                                    <td>{{ quote.createdAt|date('d/m/Y H:i') }}</td>
                                    <td>{{ quote.fullName }}</td>
                                    <td>
                                        {% if quote.items.first %}
                                            {% set productTypes = {
                                                'Modes et accessoires': 'Modes et accessoires',
                                                'Lingerie': 'Lingerie',
                                                'Bijoux inoxydable': 'Bijoux inoxydable',
                                                'Article de bébé': 'Article de bébé',
                                                'Électroménager': 'Électroménager',
                                                'Ustensiles de cuisine': 'Ustensiles de cuisine',
                                                'Linge de maison': 'Linge de maison',
                                                'Meuble d\'intérieur': 'Meuble d\'intérieur',
                                                'Décoration': 'Décoration',
                                                'Meuble de jardin': 'Meuble de jardin',
                                                'Article pour les animaux domestiques': 'Article pour les animaux domestiques',
                                                'Accessoires mobiles': 'Accessoires mobiles',
                                                'Article de voyage': 'Article de voyage',
                                                'Équipements de cuisine et de restauration': 'Équipements de cuisine et de restauration',
                                                'Équipements de pâtisserie et de boulangerie': 'Équipements de pâtisserie et de boulangerie',
                                                'Jouets': 'Jouets',
                                                'Articles de sport': 'Articles de sport'
                                            } %}
                                            {{ productTypes[quote.items.first.productType] ?? quote.items.first.productType }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>{{ quote.items.first ? quote.items.first.quantity : '-' }}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_quote_view', {'id': quote.id}) }}" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i> Voir
                                            </a>
                                            <a href="{{ path('app_quote_process', {'id': quote.id}) }}" class="btn btn-sm btn-success">
                                                <i class="fas fa-check"></i> Traiter
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
        
        <div class="tab-pane fade" id="processed" role="tabpanel" aria-labelledby="processed-tab">
            {% if processedQuotes is empty %}
                <div class="alert alert-info">
                    Aucun devis traité.
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>N° de devis</th>
                                <th>Date</th>
                                <th>Client</th>
                                <th>Produit</th>
                                <th>Quantité</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for quote in processedQuotes %}
                                <tr>
                                    <td>{{ quote.quoteNumber }}</td>
                                    <td>{{ quote.createdAt|date('d/m/Y H:i') }}</td>
                                    <td>{{ quote.fullName }}</td>
                                    <td>
                                        {% if quote.items.first %}
                                            {% set productTypes = {
                                                'Modes et accessoires': 'Modes et accessoires',
                                                'Lingerie': 'Lingerie',
                                                'Bijoux inoxydable': 'Bijoux inoxydable',
                                                'Article de bébé': 'Article de bébé',
                                                'Électroménager': 'Électroménager',
                                                'Ustensiles de cuisine': 'Ustensiles de cuisine',
                                                'Linge de maison': 'Linge de maison',
                                                'Meuble d\'intérieur': 'Meuble d\'intérieur',
                                                'Décoration': 'Décoration',
                                                'Meuble de jardin': 'Meuble de jardin',
                                                'Article pour les animaux domestiques': 'Article pour les animaux domestiques',
                                                'Accessoires mobiles': 'Accessoires mobiles',
                                                'Article de voyage': 'Article de voyage',
                                                'Équipements de cuisine et de restauration': 'Équipements de cuisine et de restauration',
                                                'Équipements de pâtisserie et de boulangerie': 'Équipements de pâtisserie et de boulangerie',
                                                'Jouets': 'Jouets',
                                                'Articles de sport': 'Articles de sport'
                                            } %}
                                            {{ productTypes[quote.items.first.productType] ?? quote.items.first.productType }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>{{ quote.quantity }}</td>
                                    <td>
                                        <a href="{{ path('app_quote_view', {'id': quote.id}) }}" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> Voir
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %} 