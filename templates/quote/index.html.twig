{% extends 'base.html.twig' %}

{% block title %}Demande de devis - Duo Import MDG{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-4">Formulaire de demande de devis</h1>
    
    <p class="text-center mb-4">
        Veuillez remplir ce formulaire avec les détails de votre projet. Notre équipe vous contactera dans les 24 heures avec un devis personnalisé.
    </p>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.firstName) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lastName) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.phone) }}
            </div>
        </div>

        {{ form_row(form.company) }}
        
        {{ form_row(form.productType) }}
        
        <div id="otherProductTypeContainer" style="display: none;">
            {{ form_row(form.otherProductType) }}
        </div>

        {{ form_row(form.productDescription) }}

        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.quantity) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.budget) }}
            </div>
        </div>

        {{ form_row(form.timeline) }}

        <div class="mb-3">
            {{ form_label(form.services) }}
            <div class="services-checkboxes">
                {% for service in form.services %}
                    <div class="form-check">
                        {{ form_widget(service) }}
                        {{ form_label(service) }}
                    </div>
                {% endfor %}
            </div>
        </div>

        {{ form_row(form.additionalInfo) }}

        <div class="mb-3">
            {{ form_label(form.referralSource) }}
            <div class="referral-radio">
                {% for choice in form.referralSource %}
                    <div class="form-check">
                        {{ form_widget(choice) }}
                        {{ form_label(choice) }}
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="mb-3 form-check">
            {{ form_widget(form.privacyPolicy) }}
            {{ form_label(form.privacyPolicy) }}
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Soumettre ma demande de devis</button>
        </div>
    {{ form_end(form) }}
</div>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const productTypeSelect = document.querySelector('#quote_productType');
    const otherProductTypeContainer = document.querySelector('#otherProductTypeContainer');
    
    if (productTypeSelect && otherProductTypeContainer) {
        productTypeSelect.addEventListener('change', function() {
            if (this.value === 'other') {
                otherProductTypeContainer.style.display = 'block';
                otherProductTypeContainer.querySelector('input').required = true;
            } else {
                otherProductTypeContainer.style.display = 'none';
                otherProductTypeContainer.querySelector('input').required = false;
            }
        });
    }
});
</script>
{% endblock %}
{% endblock %} 