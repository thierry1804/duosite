{% extends 'base.html.twig' %}

{% block title %}Demande de devis - Duo Import MDG{% endblock %}

{% block stylesheets %}
<style>
.loader-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.9);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 9999;
}

.loader {
    width: 50px;
    height: 50px;
    border: 5px solid #f3f3f3;
    border-radius: 50%;
    border-top: 5px solid #3498db;
    animation: spin 1s linear infinite;
}

.loader-text {
    margin-top: 20px;
    font-size: 1.1em;
    color: #333;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}
</style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-4">Formulaire de demande de devis</h1>
    
    <p class="text-center mb-4">
        Veuillez remplir ce formulaire avec les détails de votre projet. Notre équipe vous contactera dans les 24 heures avec un devis personnalisé.
    </p>

    {% for label, messages in app.flashes %}
        {% if label == 'success' or label == 'error' %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endif %}
    {% endfor %}

    <!-- Loader -->
    <div id="loader" class="loader-container" style="display: none;">
        <div class="loader"></div>
        <p class="loader-text">Envoi de votre demande en cours...</p>
    </div>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'id': 'quoteForm', 'novalidate': 'novalidate'}}) }}
        {{ form_errors(form) }}
        
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.firstName) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lastName) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.phone) }}
            </div>
        </div>

        {{ form_row(form.company) }}
        
        {{ form_row(form.productType) }}
        
        <div id="otherProductTypeContainer" style="display: none;">
            {{ form_row(form.otherProductType) }}
        </div>

        {{ form_row(form.productDescription) }}

        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.quantity) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.budget) }}
            </div>
        </div>

        {{ form_row(form.timeline) }}

        <div class="mb-3">
            {{ form_label(form.services) }}
            <div class="services-checkboxes">
                {% for service in form.services %}
                    <div class="form-check">
                        {{ form_widget(service) }}
                        {{ form_label(service) }}
                    </div>
                {% endfor %}
            </div>
            {{ form_errors(form.services) }}
        </div>

        {{ form_row(form.additionalInfo) }}

        <div class="mb-3">
            {{ form_label(form.referralSource) }}
            <div class="referral-radio">
                {% for choice in form.referralSource %}
                    <div class="form-check">
                        {{ form_widget(choice) }}
                        {{ form_label(choice) }}
                    </div>
                {% endfor %}
            </div>
            {{ form_errors(form.referralSource) }}
        </div>

        <div class="mb-3 form-check">
            {{ form_widget(form.privacyPolicy) }}
            {{ form_label(form.privacyPolicy) }}
            {{ form_errors(form.privacyPolicy) }}
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary" id="submitButton">Soumettre ma demande de devis</button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/quote.js') }}"></script>
{% endblock %} 