{% extends 'base.html.twig' %}

{% block title %}Détails du devis {{ quote.quoteNumber }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Détails du devis <span class="text-primary">{{ quote.quoteNumber }}</span></h1>
            
            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Informations générales</h5>
                    <span class="badge {{ quote.processed ? 'bg-success' : 'bg-warning' }}">
                        {{ quote.processed ? 'Traité' : 'En attente' }}
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Date de création:</strong> {{ quote.createdAt|date('d/m/Y H:i') }}</p>
                            <p><strong>Nom complet:</strong> {{ quote.fullName }}</p>
                            <p><strong>Email:</strong> {{ quote.email }}</p>
                            <p><strong>Téléphone:</strong> {{ quote.phone }}</p>
                            {% if quote.company %}
                                <p><strong>Entreprise:</strong> {{ quote.company }}</p>
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <p><strong>Statut:</strong>
                                {% if quote.status == 'pending' %}
                                    <span class="badge bg-warning text-dark">En attente</span>
                                {% elseif quote.status == 'in_progress' %}
                                    <span class="badge bg-info">En cours</span>
                                {% elseif quote.status == 'completed' %}
                                    <span class="badge bg-success">Terminé</span>
                                {% elseif quote.status == 'rejected' %}
                                    <span class="badge bg-danger">Rejeté</span>
                                {% endif %}
                            </p>
                            {% if quote.shippingMethod %}
                                <p><strong>Méthode(s) d'expédition:</strong>
                                    <ul class="mt-1">
                                    {% for method in quote.shippingMethod %}
                                        <li>
                                        {% if method == 'maritime' %}
                                            Envoi maritime (délai estimé: 50-70 jours)
                                        {% elseif method == 'aerien_express' %}
                                            Envoi aérien express (délai estimé: 3-7 jours)
                                        {% elseif method == 'aerien_normal' %}
                                            Envoi aérien normal (délai estimé: 15-30 jours)
                                        {% endif %}
                                        </li>
                                    {% endfor %}
                                    </ul>
                                </p>
                            {% endif %}
                            <p><strong>Nombre de produits:</strong> {{ quote.items|length }}</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Produits demandés</h5>
                </div>
                <div class="card-body">
                    {% if quote.items|length > 0 %}
                        {% for item in quote.items %}
                            <div class="border-bottom pb-3 mb-3 {% if not loop.last %}mb-3{% endif %}">
                                <h6 class="fw-bold">Produit #{{ loop.index }}</h6>
                                
                                <div class="row mb-2">
                                    <div class="col-md-4">
                                        <p><strong>Type de produit:</strong> 
                                            {% set productTypes = {
                                                'Modes et accessoires': 'Modes et accessoires',
                                                'Lingerie': 'Lingerie',
                                                'Bijoux inoxydable': 'Bijoux inoxydable',
                                                'Article de bébé': 'Article de bébé',
                                                'Électroménager': 'Électroménager',
                                                'Ustensiles de cuisine': 'Ustensiles de cuisine',
                                                'Linge de maison': 'Linge de maison',
                                                'Meuble d\'intérieur': 'Meuble d\'intérieur',
                                                'Décoration': 'Décoration',
                                                'Meuble de jardin': 'Meuble de jardin',
                                                'Article pour les animaux domestiques': 'Article pour les animaux domestiques',
                                                'Accessoires mobiles': 'Accessoires mobiles',
                                                'Article de voyage': 'Article de voyage',
                                                'Équipements de cuisine et de restauration': 'Équipements de cuisine et de restauration',
                                                'Équipements de pâtisserie et de boulangerie': 'Équipements de pâtisserie et de boulangerie',
                                                'Jouets': 'Jouets',
                                                'Articles de sport': 'Articles de sport'
                                            } %}
                                            {{ productTypes[item.productType] ?? item.productType }}
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <p><strong>Quantité:</strong> {{ item.quantity ?: 'Non spécifié' }}</p>
                                    </div>
                                    <div class="col-md-4">
                                        {% if item.budget %}
                                            <p><strong>Budget:</strong> {{ item.budget }} €</p>
                                        {% endif %}
                                    </div>
                                </div>
                                
                                <p><strong>Description:</strong></p>
                                <div class="p-3 bg-light rounded">
                                    {{ item.description|nl2br }}
                                </div>
                                
                                {% if item.photoFilename %}
                                    <p class="mt-2"><strong>Photo:</strong> 
                                        <a href="{{ asset('uploads/quote_photos/' ~ item.photoFilename) }}" target="_blank">
                                            Voir la photo
                                        </a>
                                    </p>
                                {% endif %}
                            </div>
                        {% endfor %}
                    {% else %}
                        <p>Aucun produit spécifié</p>
                    {% endif %}
                </div>
            </div>
            
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Services requis</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {% set serviceLabels = {
                            'sourcing': 'Sourcing de fournisseurs',
                            'qualityControl': 'Contrôle qualité',
                            'logistics': 'Logistique et transport',
                            'customs': 'Dédouanement',
                            'productDevelopment': 'Développement de produit',
                            'fullService': 'Service complet (de la recherche à la livraison)'
                        } %}
                        
                        {% for service in quote.services %}
                            <li class="list-group-item">{{ serviceLabels[service] ?? service }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            
            {% if quote.additionalInfo %}
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Informations complémentaires</h5>
                </div>
                <div class="card-body">
                    <p>{{ quote.additionalInfo|nl2br }}</p>
                </div>
            </div>
            {% endif %}
            
            {% if quote.referralSource %}
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Source de référence</h5>
                </div>
                <div class="card-body">
                    {% set referralSources = {
                        'search': 'Moteur de recherche',
                        'socialMedia': 'Réseaux sociaux',
                        'recommendation': 'Recommandation',
                        'other': 'Autre'
                    } %}
                    <p>{{ referralSources[quote.referralSource] ?? quote.referralSource }}</p>
                </div>
            </div>
            {% endif %}
            
            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_quote_dashboard') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Retour au tableau de bord
                </a>
                
                {% if not quote.processed %}
                <a href="{{ path('app_quote_process', {'id': quote.id}) }}" class="btn btn-success">
                    <i class="fas fa-check me-2"></i> Marquer comme traité
                </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %} 