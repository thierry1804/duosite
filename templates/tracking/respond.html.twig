{% extends 'base.html.twig' %}

{% block title %}Répondre à l'offre - Devis {{ quote.quoteNumber }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .offer-card {
            border: 2px solid #e9ecef;
            border-radius: 15px;
            transition: all 0.3s ease;
        }
        .offer-card:hover {
            border-color: #0d6efd;
            box-shadow: 0 4px 15px rgba(13, 110, 253, 0.1);
        }
        .action-buttons {
            position: sticky;
            bottom: 0;
            background: white;
            border-top: 1px solid #e9ecef;
            padding: 20px;
            margin: 0 -20px -20px -20px;
        }
        .status-badge {
            font-size: 0.9em;
            padding: 8px 16px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- En-tête -->
            <div class="text-center mb-4">
                <h1 class="display-6 fw-bold text-primary mb-3">
                    <i class="fas fa-handshake me-3"></i>
                    Répondre à votre offre
                </h1>
                <p class="lead text-muted">
                    Devis <strong>{{ quote.quoteNumber }}</strong> - {{ quote.createdAt|date('d/m/Y') }}
                </p>
                <div class="d-flex justify-content-center align-items-center gap-3">
                    <span class="badge bg-warning status-badge">
                        <i class="fas fa-clock me-2"></i>
                        En attente de votre réponse
                    </span>
                    <a href="{{ path('app_tracking_show', {'token': trackingToken}) }}" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-eye me-2"></i>
                        Voir le suivi complet
                    </a>
                </div>
            </div>

            <!-- Informations du devis -->
            <div class="card offer-card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Informations du devis
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Client :</strong> {{ quote.fullName }}</p>
                            <p><strong>Email :</strong> {{ quote.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Téléphone :</strong> {{ quote.phone }}</p>
                            {% if quote.company %}
                                <p><strong>Entreprise :</strong> {{ quote.company }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Détails de l'offre -->
            <div class="card offer-card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-file-invoice text-primary me-2"></i>
                        Détails de l'offre
                    </h5>
                </div>
                <div class="card-body">
                    {% if offer %}
                        <div class="row">
                            <div class="col-md-8">
                                <h6 class="text-primary">{{ offer.title }}</h6>
                                {% if offer.description %}
                                    <p class="text-muted">{{ offer.description }}</p>
                                {% endif %}
                                
                                <!-- Produits proposés -->
                                {% if offer.productProposals|length > 0 %}
                                    <h6 class="mt-4 mb-3">
                                        <i class="fas fa-box me-2"></i>
                                        Produits proposés
                                    </h6>
                                    {% for proposal in offer.productProposals %}
                                        <div class="border rounded p-3 mb-3">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    {% if proposal.images|length > 0 %}
                                                        <img src="{{ asset('uploads/product_proposals/' ~ proposal.images[0]) }}" 
                                                             alt="Produit" class="img-fluid rounded">
                                                    {% endif %}
                                                </div>
                                                <div class="col-md-9">
                                                    <h6>{{ proposal.name }}</h6>
                                                    {% if proposal.description %}
                                                        <p class="text-muted small">{{ proposal.description }}</p>
                                                    {% endif %}
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <small class="text-muted">Quantité : {{ proposal.quantity }}</small>
                                                        </div>
                                                        <div class="col-6">
                                                            <small class="text-muted">Prix unitaire : {{ proposal.unitPrice }} MGA</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% endif %}
                            </div>
                            <div class="col-md-4">
                                <div class="bg-light rounded p-3">
                                    <h6 class="text-primary mb-3">
                                        <i class="fas fa-calculator me-2"></i>
                                        Récapitulatif
                                    </h6>
                                    <div class="d-flex justify-content-between">
                                        <span class="fw-bold">Total :</span>
                                        <strong class="text-primary fs-5">{{ offer.totalPrice|number_format(0, ',', ' ') }} MGA</strong>
                                    </div>
                                </div>
                                
                                <!-- PDF de l'offre -->
                                {% if offer.pdfFilePath %}
                                    <div class="mt-3">
                                        <a href="{{ asset(offer.pdfFilePath) }}" 
                                           class="btn btn-outline-primary w-100" 
                                           target="_blank">
                                            <i class="fas fa-file-pdf me-2"></i>
                                            Télécharger l'offre PDF
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Aucune offre disponible pour ce devis.
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Instructions -->
            <div class="alert alert-info">
                <h6 class="alert-heading">
                    <i class="fas fa-info-circle me-2"></i>
                    Instructions
                </h6>
                <p class="mb-2">Veuillez examiner attentivement cette offre avant de prendre votre décision :</p>
                <ul class="mb-0">
                    <li><strong>Accepter :</strong> Vous confirmez votre commande et nous procéderons à l'achat et à l'expédition</li>
                    <li><strong>Refuser :</strong> Notre équipe vous proposera une nouvelle offre adaptée à vos besoins</li>
                </ul>
            </div>

            <!-- Boutons d'action -->
            <div class="action-buttons">
                <div class="d-flex gap-3 justify-content-center">
                    <form method="post" action="{{ path('app_tracking_accept', {'token': trackingToken}) }}" class="d-inline">
                        <button type="submit" class="btn btn-success btn-lg px-5" 
                                onclick="return confirm('Êtes-vous sûr de vouloir accepter cette offre ? Cette action est définitive.')">
                            <i class="fas fa-check me-2"></i>
                            Accepter l'offre
                        </button>
                    </form>
                    
                    <form method="post" action="{{ path('app_tracking_decline', {'token': trackingToken}) }}" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-lg px-5"
                                onclick="return confirm('Êtes-vous sûr de vouloir refuser cette offre ? Notre équipe vous proposera une nouvelle offre.')">
                            <i class="fas fa-times me-2"></i>
                            Refuser l'offre
                        </button>
                    </form>
                </div>
                
                <div class="text-center mt-3">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Vos données sont sécurisées et votre réponse sera transmise immédiatement à notre équipe.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Confirmation avant soumission
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const button = this.querySelector('button[type="submit"]');
                    button.disabled = true;
                    button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Traitement...';
                });
            });
        });
    </script>
{% endblock %}
