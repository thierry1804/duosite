{% block stylesheets %}
<style>
/* Process Steps */
.process-steps {
    position: relative;
    padding: 30px 0;
}

.process-step {
    display: flex;
    margin-bottom: 50px;
    position: relative;
}

.process-step:last-child {
    margin-bottom: 0;
}

.process-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--primary-color);
    opacity: 0.2;
    margin-right: 30px;
    line-height: 1;
}

.process-content {
    flex: 1;
}

.process-content h3 {
    margin-bottom: 15px;
    font-size: 1.5rem;
}

/* Hero Section Enhancements */
.hero-section {
    padding: 120px 0;
}

.hero-image img {
    transform: perspective(1000px) rotateY(-15deg);
    transition: transform 0.5s ease;
}

.hero-image:hover img {
    transform: perspective(1000px) rotateY(0deg);
}

/* Counter Animations */
.counter-number {
    display: inline-block;
    position: relative;
}

.counter-number::after {
    content: '+';
    position: absolute;
    top: 0;
    right: -20px;
    color: var(--primary-color);
}

/* Testimonial Enhancements */
.testimonial-card {
    height: 100%;
    transition: var(--transition);
    padding: 30px;
    background: #fff;
    border-radius: 15px;
}

.testimonial-card:hover {
    transform: translateY(-10px);
}

.testimonial-content {
    position: relative;
    padding-top: 30px;
    margin-bottom: 25px;
}

.testimonial-content::before {
    content: '"';
    position: absolute;
    top: 0;
    left: 0;
    font-size: 4rem;
    line-height: 1;
    color: var(--primary-color);
    opacity: 0.2;
}

.testimonial-author {
    display: flex;
    align-items: center;
}

.testimonial-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-right: 15px;
    overflow: hidden;
    background-color: var(--primary-color);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 1.2rem;
    position: relative;
}

.avatar-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--primary-color);
    color: white;
    font-weight: 600;
}

.testimonial-author h4 {
    margin-bottom: 0;
    font-size: 1.1rem;
}

.testimonial-author p {
    margin-bottom: 0;
    font-size: 0.9rem;
    color: var(--secondary-color);
}

/* Animation Delays */
[data-delay="100"] { animation-delay: 0.1s; }
[data-delay="200"] { animation-delay: 0.2s; }
[data-delay="300"] { animation-delay: 0.3s; }
[data-delay="400"] { animation-delay: 0.4s; }
[data-delay="500"] { animation-delay: 0.5s; }

/* Equal Height Cards */
.equal-height-cards {
    display: flex;
    flex-wrap: wrap;
}

.equal-height-cards > [class*='col-'] {
    display: flex;
    flex-direction: column;
}

.equal-height-cards .feature-card {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.equal-height-cards .feature-card p {
    flex-grow: 1;
}

/* Styles pour éviter les décalages de mise en page */
.section-heading {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    font-weight: 700;
    min-height: 3rem;
}

.feature-icon {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(43, 78, 255, 0.1);
    border-radius: 50%;
    margin: 0 auto 1.5rem;
    color: var(--primary-color);
    font-size: 2rem;
}

.section-padding {
    padding: 100px 0;
}

.section-title {
    margin-bottom: 60px;
}

/* Styles pour les animations sans décalage */
.fade-up {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.5s ease, transform 0.5s ease;
}

.fade-up.active {
    opacity: 1;
    transform: translateY(0);
}

/* Styles du carrousel des témoignages */
.testimonials-carousel-container {
    position: relative;
    padding: 0 50px;
}

.testimonials-carousel-container .carousel {
    padding: 20px 0;
}

.testimonials-carousel-container .carousel-inner {
    border-radius: 15px;
    overflow: hidden;
}

.testimonials-carousel-container .carousel-item {
    transition: transform 0.6s ease-in-out;
}

.testimonials-carousel-container .carousel-indicators {
    bottom: -50px;
    margin-bottom: 0;
}

.testimonials-carousel-container .carousel-indicators button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(43, 78, 255, 0.3);
    border: none;
    margin: 0 5px;
    transition: all 0.3s ease;
}

.testimonials-carousel-container .carousel-indicators button.active {
    background-color: var(--primary-color);
    transform: scale(1.2);
}

.testimonials-carousel-container .carousel-control-prev,
.testimonials-carousel-container .carousel-control-next {
    width: 50px;
    height: 50px;
    background-color: var(--primary-color);
    border-radius: 50%;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0.8;
    transition: all 0.3s ease;
}

.testimonials-carousel-container .carousel-control-prev:hover,
.testimonials-carousel-container .carousel-control-next:hover {
    opacity: 1;
    transform: translateY(-50%) scale(1.1);
}

.testimonials-carousel-container .carousel-control-prev {
    left: -25px;
}

.testimonials-carousel-container .carousel-control-next {
    right: -25px;
}

.testimonials-carousel-container .carousel-control-prev-icon,
.testimonials-carousel-container .carousel-control-next-icon {
    width: 20px;
    height: 20px;
}

/* Responsive pour le carrousel */
@media (max-width: 768px) {
    .testimonials-carousel-container {
        padding: 0 20px;
    }
    
    .testimonials-carousel-container .carousel-control-prev,
    .testimonials-carousel-container .carousel-control-next {
        width: 40px;
        height: 40px;
    }
    
    .testimonials-carousel-container .carousel-control-prev {
        left: -20px;
    }
    
    .testimonials-carousel-container .carousel-control-next {
        right: -20px;
    }
    
    .testimonials-carousel-container .carousel-control-prev-icon,
    .testimonials-carousel-container .carousel-control-next-icon {
        width: 16px;
        height: 16px;
    }
}

/* Animation d'entrée pour les cartes de témoignages */
.testimonials-carousel-container .testimonial-card {
    animation: slideInUp 0.6s ease-out;
}

@keyframes slideInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
