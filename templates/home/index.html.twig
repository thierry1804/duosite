{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialisation du carrousel des témoignages
    const testimonialsCarousel = document.getElementById('testimonialsCarousel');
    
    if (testimonialsCarousel) {
        // Pause automatique au survol
        testimonialsCarousel.addEventListener('mouseenter', function() {
            const carousel = bootstrap.Carousel.getInstance(this);
            if (carousel) {
                carousel.pause();
            }
        });
        
        // Reprise automatique quand la souris quitte
        testimonialsCarousel.addEventListener('mouseleave', function() {
            const carousel = bootstrap.Carousel.getInstance(this);
            if (carousel) {
                carousel.cycle();
            }
        });
        
        // Animation des cartes lors du changement de slide
        testimonialsCarousel.addEventListener('slide.bs.carousel', function(e) {
            const activeSlide = e.target.querySelector('.carousel-item.active');
            const nextSlide = e.target.querySelector('.carousel-item-next');
            
            if (activeSlide) {
                const cards = activeSlide.querySelectorAll('.testimonial-card');
                cards.forEach((card, index) => {
                    card.style.animationDelay = `${index * 0.1}s`;
                    card.style.animation = 'none';
                    card.offsetHeight; // Force reflow
                    card.style.animation = 'slideInUp 0.6s ease-out forwards';
                });
            }
        });
        
        // Animation initiale pour le premier slide
        const firstSlide = testimonialsCarousel.querySelector('.carousel-item.active');
        if (firstSlide) {
            const cards = firstSlide.querySelectorAll('.testimonial-card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
                card.style.animation = 'slideInUp 0.6s ease-out forwards';
            });
        }
    }
    
    // Amélioration de l'accessibilité
    const carouselIndicators = document.querySelectorAll('#testimonialsCarousel .carousel-indicators button');
    carouselIndicators.forEach((indicator, index) => {
        indicator.addEventListener('click', function() {
            // Mise à jour des attributs ARIA
            carouselIndicators.forEach(btn => {
                btn.setAttribute('aria-current', 'false');
                btn.classList.remove('active');
            });
            this.setAttribute('aria-current', 'true');
            this.classList.add('active');
        });
    });
    
    // Support du clavier pour la navigation
    document.addEventListener('keydown', function(e) {
        if (e.target.closest('#testimonialsCarousel')) {
            const carousel = bootstrap.Carousel.getInstance(testimonialsCarousel);
            if (carousel) {
                if (e.key === 'ArrowLeft') {
                    e.preventDefault();
                    carousel.prev();
                } else if (e.key === 'ArrowRight') {
                    e.preventDefault();
                    carousel.next();
                }
            }
        }
    });
});
</script>
