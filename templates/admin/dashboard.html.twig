{% extends 'base.html.twig' %}

{% block title %}Tableau de bord administrateur{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Tableau de bord administrateur</h1>
            
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Gestion des devis</h5>
                        </div>
                        <div class="card-body">
                            <p>Gérez les demandes de devis et leurs paramètres.</p>
                            <div class="d-grid gap-2">
                                <a href="{{ path('app_quote_dashboard') }}" class="btn btn-outline-primary">Voir les devis</a>
                                <a href="{{ path('app_admin_quote_settings') }}" class="btn btn-outline-primary">Paramètres des devis</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">Sécurité</h5>
                        </div>
                        <div class="card-body">
                            <p>Surveillez les activités suspectes et les tentatives de fraude.</p>
                            <div class="d-grid gap-2">
                                <a href="{{ path('app_admin_suspicious_users') }}" class="btn btn-outline-warning">Utilisateurs suspects</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Autres cartes pour d'autres fonctionnalités -->
            </div>
        </div>
    </div>
</div>
{% endblock %} 