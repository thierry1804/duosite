{% extends 'base.html.twig' %}

{% block title %}Utilisateurs suspects{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Utilisateurs avec activité suspecte</h1>
            
            <div class="alert alert-info">
                <p>Cette page affiche les utilisateurs qui ont potentiellement tenté de contourner le système en utilisant différentes identités.</p>
            </div>
            
            {% if suspiciousUsers is empty %}
                <div class="alert alert-success">
                    <p>Aucun utilisateur suspect détecté.</p>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Utilisateur</th>
                                <th>Email actuel</th>
                                <th>Téléphone actuel</th>
                                <th>Emails utilisés</th>
                                <th>Téléphones utilisés</th>
                                <th>Noms utilisés</th>
                                <th>Détails</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in suspiciousUsers %}
                                <tr>
                                    <td>{{ item.user.firstName }} {{ item.user.lastName }}</td>
                                    <td>{{ item.user.email }}</td>
                                    <td>{{ item.user.phone }}</td>
                                    <td>
                                        <ul class="list-unstyled">
                                            {% for email in item.fraudDetails.emails %}
                                                <li>{{ email }}</li>
                                            {% endfor %}
                                        </ul>
                                    </td>
                                    <td>
                                        <ul class="list-unstyled">
                                            {% for phone in item.fraudDetails.phones %}
                                                <li>{{ phone }}</li>
                                            {% endfor %}
                                        </ul>
                                    </td>
                                    <td>
                                        <ul class="list-unstyled">
                                            {% for name in item.fraudDetails.names %}
                                                <li>{{ name }}</li>
                                            {% endfor %}
                                        </ul>
                                    </td>
                                    <td>
                                        <ul class="list-unstyled">
                                            {% for detail in item.fraudDetails.details %}
                                                <li><span class="badge bg-warning text-dark">{{ detail }}</span></li>
                                            {% endfor %}
                                        </ul>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_user_quotes', {'id': item.user.id}) }}" class="btn btn-sm btn-primary">Voir les devis</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
            
            <div class="mt-4">
                <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">Retour au tableau de bord</a>
            </div>
        </div>
    </div>
</div>
{% endblock %} 