<div class="list-group mb-4 rounded-3 shadow-sm">
    <a href="{{ path('app_user_profile') }}" class="list-group-item list-group-item-action border-0 {% if active == 'profile' %}active{% endif %} d-flex align-items-center p-3">
        <i class="fas fa-user-circle fs-5 me-3"></i> 
        <span>Mon profil</span>
    </a>
    <a href="{{ path('app_user_quotes') }}" class="list-group-item list-group-item-action border-0 {% if active == 'quotes' %}active{% endif %} d-flex align-items-center p-3">
        <i class="fas fa-file-invoice fs-5 me-3"></i> 
        <span>Mes demandes de devis</span>
    </a>
    <a href="{{ path('app_quote') }}" class="list-group-item list-group-item-action border-0 d-flex align-items-center p-3">
        <i class="fas fa-plus-circle fs-5 me-3"></i> 
        <span>Nouvelle demande de devis</span>
    </a>
    <a href="{{ path('app_logout') }}" class="list-group-item list-group-item-action border-0 text-danger d-flex align-items-center p-3">
        <i class="fas fa-sign-out-alt fs-5 me-3"></i> 
        <span>DÃ©connexion</span>
    </a>
</div>

<div class="card border-0 rounded-3 shadow-sm mb-4 overflow-hidden">
    <div class="card-header bg-primary text-white p-3">
        <h5 class="mb-0 fs-5 d-flex align-items-center">
            <i class="fas fa-info-circle me-2"></i>
            Informations
        </h5>
    </div>
    <div class="card-body p-3">
        <div class="d-flex align-items-center mb-3">
            <div class="avatar-placeholder bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                {{ app.user.firstName|first|upper }}{{ app.user.lastName|first|upper }}
            </div>
            <div>
                <h6 class="mb-0 fw-bold">{{ app.user.fullName }}</h6>
                <p class="text-muted mb-0 small">{{ app.user.email }}</p>
            </div>
        </div>
        <div class="border-top pt-3">
            <div class="d-flex justify-content-between mb-2">
                <span class="text-muted small"><i class="fas fa-calendar-alt me-2"></i>Membre depuis</span>
                <span class="fw-bold small">{{ app.user.createdAt|date('d/m/Y') }}</span>
            </div>
            <div class="d-flex justify-content-between">
                <span class="text-muted small"><i class="fas fa-file-invoice me-2"></i>Nombre de devis</span>
                <span class="fw-bold small">{{ app.user.quotes|length }}</span>
            </div>
        </div>
    </div>
</div>

<style>
    .list-group-item {
        transition: all 0.2s ease;
    }
    
    .list-group-item:hover:not(.active) {
        background-color: #f8f9fa;
        transform: translateX(5px);
    }
    
    .list-group-item.active {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }
    
    .avatar-placeholder {
        transition: all 0.3s ease;
    }
    
    .avatar-placeholder:hover {
        transform: scale(1.05);
    }
</style> 