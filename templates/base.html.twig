<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Duo Import MDG{% endblock %}</title>
        <link rel="icon" href="favicon.ico">
        
        <!-- CSS critique en ligne pour un rendu rapide -->
        <style>
            /* Styles critiques pour le rendu initial */
            :root {
                --primary-color: #2b4eff;
                --primary-dark: #1a3dff;
                --secondary-color: #6c757d;
                --text-color: #444444;
            }

            body {
                font-family: 'Poppins', sans-serif;
                color: var(--text-color);
                line-height: 1.7;
                margin: 0;
            }

            .navbar {
                padding: 1rem 0;
                background: #fff !important;
                box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
                min-height: 80px;
            }

            .navbar-brand {
                font-weight: 700;
                font-size: 1.5rem;
                display: flex;
                align-items: center;
            }

            .navbar-brand img {
                margin-right: 10px;
            }

            .user-icon-active {
                color: #0d6efd;
            }

            .user-icon-inactive {
                color: #6c757d;
            }

            /* Styles minimaux pour le contenu principal */
            main {
                min-height: 300px;
            }

            /* Styles minimaux pour le footer */
            .footer-area {
                background: #1a1a1a;
                color: #fff;
                padding: 80px 0 30px;
            }
            
            /* Styles minimaux pour la section hero */
            .hero-section {
                background: linear-gradient(45deg, #2b4eff, #1a3dff);
                padding: 100px 0;
                position: relative;
                overflow: hidden;
            }
            
            .hero-section h1 {
                color: #fff;
                font-weight: 700;
            }
            
            .hero-section p {
                color: rgba(255, 255, 255, 0.9);
            }
        </style>
        
        <!-- Préchargement des ressources critiques -->
        <link rel="preload" href="{{ asset('images/logo.webp') }}" as="image" fetchpriority="high">
        <link rel="preload" href="{{ asset('images/hero-image.webp') }}" as="image" fetchpriority="high">
        <link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" as="style">
        
        <!-- Chargement asynchrone des styles non critiques -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" media="print" onload="this.media='all'">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}" media="print" onload="this.media='all'">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
        
        <noscript>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
            <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
        </noscript>
        
        {% block stylesheets %}{% endblock %}
        
        <!-- Google tag (gtag.js) - déplacé en bas et chargé de manière asynchrone -->
        <script async defer src="https://www.googletagmanager.com/gtag/js?id=G-5WQD09147M"></script>
        <script>
            window.addEventListener('load', function() {
                window.dataLayer = window.dataLayer || [];
                function gtag(){dataLayer.push(arguments);}
                gtag('js', new Date());
                gtag('config', 'G-5WQD09147M');
            });
        </script>
    </head>
    <body>
        <!-- Header -->
        <header class="header-area">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <a class="navbar-brand" href="{{ path('app_home') }}">
                        <img src="{{ asset('images/logo.webp') }}" alt="Logo" height="40" width="40" class="d-inline-block align-text-top" fetchpriority="high">
                        Duo Import MDG
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') == 'app_home' %}active{% endif %}" href="{{ path('app_home') }}">Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') == 'app_services' %}active{% endif %}" href="{{ path('app_services') }}">Nos Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') == 'app_about' %}active{% endif %}" href="{{ path('app_about') }}">Qui sommes-nous</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') == 'app_contact' %}active{% endif %}" href="{{ path('app_contact') }}">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary {% if app.request.get('_route') == 'app_quote' %}active{% endif %}" href="{{ path('app_quote') }}">Demander un devis</a>
                            </li>
                            {% if app.user %}
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user user-icon-active me-1"></i> {{ app.user.firstName }}
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="{{ path('app_user_profile') }}">Mon profil</a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_user_quotes') }}">Mes devis</a></li>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" href="{{ path('app_quote_dashboard') }}">Tableau de bord</a></li>
                                        {% endif %}
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                                    </ul>
                                </li>
                            {% else %}
                                <li class="nav-item dropdown">
                                    <a class="nav-link" href="{{ path('app_login') }}" id="navbarUserIcon">
                                        <i class="fas fa-user user-icon-inactive fs-5"></i>
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- Main Content -->
        <main>
            {% block body %}{% endblock %}
        </main>

        <!-- Footer -->
        <footer class="footer-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                        <div class="footer-widget">
                            <h5>À propos de nous</h5>
                            <p>Duo Import MDG est votre partenaire de confiance pour l'importation de produits depuis la Chine. Nous vous accompagnons dans toutes les étapes de votre projet d'importation.</p>
                            <div class="social-icons mt-4">
                                <a href="https://www.facebook.com/duoimportmdg" target="_blank"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" target="_blank"><i class="fab fa-tiktok"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                        <div class="footer-widget">
                            <h5>Liens rapides</h5>
                            <ul class="footer-links list-unstyled">
                                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                                <li><a href="{{ path('app_services') }}">Nos Services</a></li>
                                <li><a href="{{ path('app_about') }}">Qui sommes-nous</a></li>
                                <li><a href="{{ path('app_contact') }}">Contact</a></li>
                                <li><a href="{{ path('app_quote') }}">Demander un devis</a></li>
                                {% if not app.user %}
                                    <li><a href="{{ path('app_login') }}">Connexion</a></li>
                                    <li><a href="{{ path('app_user_register') }}">Créer un compte</a></li>
                                {% else %}
                                    <li><a href="{{ path('app_user_profile') }}">Mon profil</a></li>
                                    <li><a href="{{ path('app_user_quotes') }}">Mes devis</a></li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="footer-widget">
                            <h5>Contactez-nous</h5>
                            <ul class="footer-contact list-unstyled">
                                <li>
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    Ankadindravola Ivato<br>Antananarivo - Madagascar
                                </li>
                                <li>
                                    <i class="fas fa-phone me-2"></i>
                                    +261 38 42 711 68
                                </li>
                                <li>
                                    <i class="fas fa-envelope me-2"></i>
                                    contact@duoimport.mg
                                </li>
                                <li>
                                    <i class="fas fa-clock me-2"></i>
                                    Lun - Ven: 8h00 - 17h00
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <hr class="mt-5">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="mb-0">&copy; {{ "now"|date("Y") }} Duo Import MDG. Tous droits réservés.</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <p class="mb-0">
                            <a href="{{ path('app_cgv') }}" class="me-3">CGV</a>
                            <a href="#">Politique de confidentialité</a>
                        </p>
                    </div>
                </div>
            </div>
        </footer>

        <!-- Back to Top -->
        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="fas fa-arrow-up"></i></a>

        <!-- Chargement différé des ressources non critiques -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" media="print" onload="this.media='all'">
        <noscript><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"></noscript>

        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
        <script src="{{ asset('js/scripts.js') }}" defer></script>
        {% block javascripts %}{% endblock %}
        
        <script>
            // Back to top button
            document.addEventListener('DOMContentLoaded', function() {
                const backToTop = document.querySelector('.back-to-top');
                if (backToTop) {
                    window.addEventListener('scroll', () => {
                        if (window.pageYOffset > 100) {
                            backToTop.classList.add('active');
                        } else {
                            backToTop.classList.remove('active');
                        }
                    });
                }

                // Animation on scroll
                const fadeElements = document.querySelectorAll('.fade-up');
                
                if (fadeElements.length > 0) {
                    const observer = new IntersectionObserver((entries) => {
                        entries.forEach(entry => {
                            if (entry.isIntersecting) {
                                entry.target.classList.add('active');
                            }
                        });
                    }, { threshold: 0.1 });

                    fadeElements.forEach(element => {
                        observer.observe(element);
                    });
                }
            });
        </script>
    </body>
</html> 