{% extends 'base.html.twig' %}

{% block title %}Contact - Duo Import MDG{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .page-header {
        background: linear-gradient(45deg, #2b4eff,rgb(170, 163, 211));
        position: relative;
        overflow: hidden;
    }
    
    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAUAAAAFCAYAAACNbyblAAAAAXNSR0IArs4c6QAAAB5JREFUGFdjZMACGGFi7969+y8kJATmwwWRNRAvCAAm1wQG3KGoPAAAAABJRU5ErkJggg==') repeat;
        opacity: 0.1;
    }

    .contact-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        padding: 2rem;
    }

    .contact-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    }

    .contact-icon {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: rgba(43, 78, 255, 0.1);
        color: #2b4eff;
        font-size: 24px;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

    .contact-card:hover .contact-icon {
        background: #2b4eff;
        color: #fff;
    }

    .form-control {
        border-radius: 8px;
        padding: 0.8rem 1.2rem;
        border: 1px solid #e9ecef;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #2b4eff;
        box-shadow: 0 0 0 0.2rem rgba(43, 78, 255, 0.25);
    }

    .btn-primary {
        background: #2b4eff;
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: #1a3dff;
        transform: translateY(-2px);
    }

    .social-icons a {
        width: 40px;
        height: 40px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin-right: 10px;
        transition: all 0.3s ease;
        background: rgba(43, 78, 255, 0.1);
        color: #2b4eff;
    }

    .social-icons a:hover {
        background: #2b4eff;
        color: #fff;
        transform: translateY(-3px);
    }

    .map-container {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .accordion-item {
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .accordion-button {
        padding: 1.2rem;
        font-weight: 600;
        background: #fff;
    }

    .accordion-button:not(.collapsed) {
        background: #2b4eff;
        color: #fff;
    }

    .loader-container {
        background: rgba(255, 255, 255, 0.95) !important;
    }

    .spinner-border {
        color: #2b4eff !important;
    }
</style>
{% endblock %}

{% block body %}
<section class="page-header bg-primary text-white py-5">
    <div class="container">
        <h1 class="display-4">Contactez-nous</h1>
        <p class="lead">Nous sommes à votre écoute pour répondre à toutes vos questions</p>
    </div>
</section>

<section class="contact-info py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-4 mb-md-0">
                <h2 class="mb-4">Nos coordonnées</h2>
                
                <div class="contact-item d-flex mb-4">
                    <div class="contact-icon bg-primary text-white rounded-circle me-3">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div>
                        <h3 class="h5">Adresse</h3>
                        <p class="mb-0">Ankadindravola<br>Ivato<br>Antananarivo - Madagascar</p>
                    </div>
                </div>
                
                <div class="contact-item d-flex mb-4">
                    <div class="contact-icon bg-primary text-white rounded-circle me-3">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div>
                        <h3 class="h5">Téléphone</h3>
                        <p class="mb-0">+261 38 42 711 68</p>
                    </div>
                </div>
                
                <div class="contact-item d-flex mb-4">
                    <div class="contact-icon bg-primary text-white rounded-circle me-3">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div>
                        <h3 class="h5">Email</h3>
                        <p class="mb-0">contact@duoimport.mg</p>
                    </div>
                </div>
                
                <div class="contact-item d-flex">
                    <div class="contact-icon bg-primary text-white rounded-circle me-3">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div>
                        <h3 class="h5">Horaires d'ouverture</h3>
                        <p class="mb-0">Lundi - Vendredi: 8h00 - 17h00<br>Samedi: Fermé<br>Dimanche: Fermé</p>
                    </div>
                </div>
                
                <div class="mt-4">
                    <h3 class="h5">Suivez-nous</h3>
                    <div class="social-icons">
                        <a href="https://www.facebook.com/duoimportmdg" target="_blank" class="text-white bg-primary me-2"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" target="_blank" class="text-white bg-primary"><i class="fab fa-tiktok  "></i></a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h2 class="card-title mb-4">Envoyez-nous un message</h2>
                        
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {{ form_start(form, {'attr': {'id': 'contactForm'}}) }}
                            {{ form_row(form.name, {'label': 'Nom complet *', 'attr': {'class': 'form-control'}}) }}
                            {{ form_row(form.email, {'label': 'Email *', 'attr': {'class': 'form-control'}}) }}
                            {{ form_row(form.subject, {'label': 'Sujet *', 'attr': {'class': 'form-control'}}) }}
                            {{ form_row(form.message, {'label': 'Message *', 'attr': {'class': 'form-control', 'rows': 5}}) }}
                            
                            <button type="submit" class="btn btn-primary">Envoyer le message</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="map-section">
    <div class="container-fluid p-0">
        <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3770.9963686037193!2d47.4784363!3d-19.0471698!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x21f07de34f0b4b67%3A0xd3bfb76c93055f1!2sAnkadindravola%2C%20Madagascar!5e0!3m2!1sfr!2smg!4v1647874587200!5m2!1sfr!2smg" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</section>

<section class="faq bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Questions fréquemment posées</h2>
        
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="accordion" id="faqAccordion">
                    <div class="accordion-item border-0 mb-3 shadow-sm">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Comment puis-je commencer à importer des produits depuis la Chine ?
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Pour commencer à importer des produits depuis la Chine, contactez-nous pour une consultation initiale. Nous discuterons de vos besoins, de votre budget et de vos délais. Ensuite, nous vous proposerons une solution adaptée à votre projet et vous accompagnerons à chaque étape du processus d'importation.
                            </div>
                        </div>
                    </div>
                    
                    <div class="accordion-item border-0 mb-3 shadow-sm">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Quels types de produits pouvez-vous importer ?
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Nous importons une large gamme de produits, notamment l'électronique, le textile, le mobilier, les produits de beauté, les jouets, les articles de sport, les outils et le matériel industriel. Si vous avez besoin d'importer un produit spécifique, n'hésitez pas à nous contacter pour discuter de vos besoins.
                            </div>
                        </div>
                    </div>
                    
                    <div class="accordion-item border-0 mb-3 shadow-sm">
                        <h2 class="accordion-header" id="headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Quels sont les délais d'importation depuis la Chine ?
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Les délais d'importation varient en fonction de plusieurs facteurs, notamment le type de produit, la quantité, le mode de transport et la saison. En général, le transport maritime prend entre 30 et 45 jours, tandis que le transport aérien peut prendre entre 7 et 14 jours. Nous vous fournirons un calendrier détaillé lors de notre consultation initiale.
                            </div>
                        </div>
                    </div>
                    
                    <div class="accordion-item border-0 shadow-sm">
                        <h2 class="accordion-header" id="headingFour">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                Comment garantissez-vous la qualité des produits importés ?
                            </button>
                        </h2>
                        <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Nous mettons en place des procédures de contrôle qualité rigoureuses à différentes étapes du processus d'importation. Cela inclut la sélection minutieuse des fournisseurs, l'inspection avant production, le contrôle pendant la production et l'inspection finale avant expédition. Nous veillons également à ce que les produits soient conformes aux normes européennes et disposent des certifications nécessaires.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Loader -->
<div id="contact-loader" class="loader-container" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(255, 255, 255, 0.8); z-index: 9999;">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Chargement...</span>
        </div>
        <p class="mt-3">Envoi de votre message en cours...</p>
    </div>
</div>

<style>
.contact-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.map-container {
    position: relative;
    overflow: hidden;
}
</style>

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animation des cartes de contact
    const cards = document.querySelectorAll('.contact-card');
    cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        setTimeout(() => {
            card.style.transition = 'all 0.5s ease';
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
        }, index * 200);
    });

    // Gestion du formulaire et loader
    const form = document.getElementById('contactForm');
    const loader = document.getElementById('contact-loader');
    if (form) {
        const newForm = form.cloneNode(true);
        form.parentNode.replaceChild(newForm, form);
        
        const submitButton = newForm.querySelector('button[type="submit"]');
        
        newForm.addEventListener('submit', function(e) {
            if (this.checkValidity()) {
                loader.style.display = 'block';
                submitButton.disabled = true;
            }
        });
    }
});
</script>
{% endblock %}
{% endblock %} 